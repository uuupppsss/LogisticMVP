<Window x:Class="BibliotekaMVP.View.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotekaMVP.View"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Авторизация"/>
        <Label Content="Логин"/>
        <TextBox x:Name="UsernameTextBox"/>
        <Label Content="Пароль"/>
        <PasswordBox x:Name="PasswordBox"/>
        <Button Content="Войти" Click="SignInClick"/>
        <Button Content="Регистрация" Click="SignUpClick"/>
    </StackPanel>
</Window>
